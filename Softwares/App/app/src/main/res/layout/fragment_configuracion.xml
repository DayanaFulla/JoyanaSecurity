<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.version.proyectofinalelectivadehardware.joyanasecurityapp.MainActivity$PlaceholderFragment"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:id="@+id/ContainerActual"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_contrasenaActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese su Contraseña:" />

        <EditText
            android:id="@+id/txtCurrentPassw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Contraseña actual"
            android:inputType="numberPassword" />

        <Button
            android:id="@+id/CambiarPassButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lb_Confirmar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ContainerNew"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_NuevaContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese su Nueva Contraseña:" />

        <EditText
            android:id="@+id/txtNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Nueva Contraseña"
            android:inputType="numberPassword" />

        <TextView
            android:id="@+id/tv_repitaContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repita su Contraseña" />

        <EditText
            android:id="@+id/txtRepitPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Repita su Contraseña"
            android:inputType="numberPassword" />

        <Button
            android:id="@+id/NewPassButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lb_Confirmar" />
    </LinearLayout>

</LinearLayout>